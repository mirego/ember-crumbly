{{#if route.linkable}}
  {{#if route.params}}
    {{#link-to params=route.params class=linkClass}}
      {{#if hasBlock}}
        {{yield this route}}
      {{else}}
        {{route.title}}
      {{/if}}
    {{/link-to}}
  {{else}}
    {{#link-to route.path class=linkClass}}
      {{#if hasBlock}}
        {{yield this route}}
      {{else}}
        {{route.title}}
      {{/if}}
    {{/link-to}}
  {{/if}}

{{else}}
  {{#if hasBlock}}
    {{yield this route}}
  {{else}}
    {{route.title}}
  {{/if}}
{{/if}}
